<bugPatterns>
    <defaultBugSeverity>LOW</defaultBugSeverity>
    <defaultEnabled>true</defaultEnabled>
    <bugPattern>
        <name>Early Finished</name>
        <bugLanguage>early_finished.dot</bugLanguage>
        <description>Handshake is missing ChangeCipherSpec.</description>
        <severity>HIGH</severity>
    </bugPattern>

    <bugPattern>
        <name>Premature HelloRequest</name>
        <bugLanguage>premature_hellorequest.dot</bugLanguage>
        <description>HelloRequest before handshake has finished.</description>
        <severity>LOW</severity>
    </bugPattern>

    <bugPattern>
        <name>Incorrect DecryptError Alert</name>
        <bugLanguage>incorrect_decrypt_error.dot</bugLanguage>
        <description>Responding with a DecryptError alert when not in possession of sufficient key material.</description>
    </bugPattern>

    <bugPattern>
        <name>Continue After CloseNotify</name>
        <bugLanguage>continue_after_close.dot</bugLanguage>
        <description>Allowing handshake to continue after a CloseNotify alert.</description>
    </bugPattern>

    <bugPattern>
        <name>Multiple Certificate</name>
        <bugLanguage>multiple_certificate.dot</bugLanguage>
        <description>Handshake contains repeated Certificate records.</description>
        <severity>LOW</severity>
    </bugPattern>

    <bugPattern>
        <name>Reorder Cert CertReq</name>
        <bugLanguage>certreq_before_cert.dot</bugLanguage>
        <description>Sending CertReq before Cert</description>
        <severity>LOW</severity>
    </bugPattern>

    <bugPattern>
        <name>ServerHello Flight Restart</name>
        <bugLanguage>serverhello_flight_restart.dot</bugLanguage>
        <description>ServerHello flight restarted after a ServerHelloDone</description>
    </bugPattern>

    <bugPattern>
        <name>Unrequested Certificate</name>
        <bugLanguage>unexpected_cert.dot</bugLanguage>
        <description>Server sent no CertificateRequest, but client still sent a Certificate.</description>
    </bugPattern>
</bugPatterns>
